{
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
    "editor.quickSuggestions": {
      "comments": true,
      "other": true,
      "strings": true,
    },
    "editor.wordBasedSuggestions": "allDocuments",
  },
  "breadcrumbs.enabled": false,
  "cSpell.language": "en,fr",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.suggestOnTriggerCharacters": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontLigatures": false,
  "editor.formatOnSave": true,
  "editor.glyphMargin": false,
  "editor.lineHeight": 24,
  "editor.minimap.enabled": false,
  "editor.overviewRulerBorder": false,
  "editor.renderWhitespace": "all",
  "editor.snippetSuggestions": "top",
  "editor.wrappingIndent": "indent",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.decorations.badges": false,
  "explorer.decorations.colors": false,
  "explorer.fileNesting.enabled": true,
  "explorer.sortOrder": "mixed",
  "files.autoSave": "afterDelay",
  "files.insertFinalNewline": true,
  "foam.edit.linkReferenceDefinitions": "off",
  "foam.files.newNotePath": "currentDir",
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "sync",
  "gitdoc.ai.customInstructions": "use conventional commit syntax, use emojis",
  "gitdoc.ai.enabled": true,
  "gitdoc.ai.useEmojis": true,
  "gitdoc.autoCommitDelay": 60000,
  "gitdoc.autoPull": "afterDelay",
  "gitdoc.autoPullDelay": 60000,
  "gitdoc.autoPush": "afterDelay",
  "gitdoc.autoPushDelay": 60000,
  "gitdoc.enabled": true,
  "gitdoc.noVerify": true,
  "markdown.copyFiles.destination": {
    "/notes/**/*": "${documentDirName}/${documentBaseName}/",
  },
  "markdown.styles": [".vscode/custom-tag-style.css"],
  "markdown.updateLinksOnFileMove.enabled": "always",
  "markdown.validate.enabled": true,
  "markdown.validate.referenceLinks.enabled": "ignore",
  "window.commandCenter": true,
  "window.zoomLevel": 1,
  "workbench.colorCustomizations": {
    "statusBar.background": "#ff69b4",
    "statusBar.foreground": "#ffffff",
    "titleBar.activeBackground": "#ff69b4",
    "titleBar.activeForeground": "#ffffff",
  },
  "workbench.colorTheme": "Bearded Theme Arc",
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 20,
  "git.confirmSync": false,
  "editor.accessibilitySupport": "off",
  "github.copilot.nextEditSuggestions.enabled": true,
  "chat.viewSessions.orientation": "stacked",
}
